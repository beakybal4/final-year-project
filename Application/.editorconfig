# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Space indentation
[*.js]
indent_style = tab
indent_size = 3

# Space indentation
[*.html]
indent_style = tab
indent_size = 3

# Space indentation
[*.php]
indent_style = space
indent_size = 4

# Space indentation
[*.sql]
indent_style = tab
indent_size = 4
